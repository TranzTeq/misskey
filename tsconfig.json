{
  "compilerOptions": {
    "allowJs": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": false,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "removeComments": false,
    "noLib": false,
    "strict": true,
    "strictNullChecks": false,
    "experimentalDecorators": true
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/client/app/**/*.ts"
  ]
}
